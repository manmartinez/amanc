<% content_for :section_title do %>
  Jugadores
<% end %>

<div id="main">
  <div class="content_wrapper">    
    <% if @players.any? %>
      <table class="custom_table">
        <thead>
          <tr>
            <th class="first">Nombre</th>
            <th>Apellidos</th>
            <th>Email</th>
            <th>Score</th>
            <th>Highscore</th>
          </tr>
          
        </thead>  
        <tbody>
          <% @players.each do |player| %>
            <tr>
              <td><%= player.name %></td>
              <td><%= player.surname %></td>
              <td><%= player.email %></td>
              <td><%= player.total_points %></td>
              <td><%= player.best_score %></td>              
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="center not_found">No hay jugadores</p>
    <% end %>

  </div>
  
  
</div>
